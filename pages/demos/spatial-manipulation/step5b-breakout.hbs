<div id="test-block-readout">
    <strong>.test-block - getBoundingClientRect()</strong>

    <div id="test-block-readout-results"></div>

    <p>Visible? <span id="visible"></span></p>
</div>

<script type="text/javascript">
    let readout = document.querySelector('#test-block-readout-results');

    document.addEventListener('scroll', function() {
        let results = document.querySelector('.test-block').getBoundingClientRect();
        readout.innerHTML = `
            top: ${results.top} <br />
            left: ${results.left}<br />
            right: ${results.right} <br />
            bottom: ${results.bottom} <br />
            height: ${results.height} <br />
            width: ${results.width}
        `;

        // Fun facts
        let isItVisible = (results.top > 0 && results.top < window.innerHeight) ||
                          (results.bottom > 0 && results.bottom < window.innerHeight);
        let isItCompletelyVisible = results.top > 0 && results.bottom < window.innerHeight;
        let isItBleeding = isItVisible && (results.bottom > window.innerHeight || results.top < 0);

        let visibility = document.querySelector('#visible');
        visibility.innerHTML = (isItVisible ? 'Visible' : '') +
                               (isItCompletelyVisible ? ' (completely so) ' : '') +
                               (isItBleeding ? ', bleeding' : '');

        let testBlock = document.querySelector('.test-block');
        testBlock.style.left = (isItCompletelyVisible) ? "0px" : null;
        testBlock.style.top = (isItCompletelyVisible) ? "0px" : null;
        testBlock.style.opacity = (isItCompletelyVisible) ? "1" : null;

    });
</script>
